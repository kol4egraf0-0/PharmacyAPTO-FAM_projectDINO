<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEF9EE">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_account_text"
        android:layout_marginLeft="32dp"
        android:textStyle="bold"
        android:textSize="36dp"
        android:textColor="#199B33"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp" />

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="32dp"
        android:drawableStart="@drawable/name"
        android:drawablePadding="14dp"
        android:ems="10"
        android:hint="Имя *"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        android:textColorHint="#199B33"
        android:textSize="18sp"
        android:gravity="center_vertical"
        android:backgroundTint="@color/black"
        android:textCursorDrawable="@drawable/edittext_cursor_black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="32dp"
        android:drawableStart="@drawable/email"
        android:drawablePadding="16dp"
        android:ems="10"
        android:hint="Почта *"
        android:inputType="textEmailAddress"
        android:textColor="@color/black"
        android:textColorHint="#199B33"
        android:backgroundTint="@color/black"
        android:textSize="18sp"
        android:textCursorDrawable="@drawable/edittext_cursor_black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextName" />

    <com.example.aptofam.Utility.SetVisibleParol
        android:id="@+id/editTextPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="32dp"
        android:drawableStart="@drawable/password"
        android:drawablePadding="22dp"
        android:ems="10"
        android:hint="Пароль *"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:textColorHint="#199B33"
        android:backgroundTint="@color/black"
        android:textSize="18sp"
        android:textCursorDrawable="@drawable/edittext_cursor_black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextEmail" />

    <com.example.aptofam.Utility.SetVisibleParol
        android:id="@+id/editTextRepeatPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="32dp"
        android:drawableStart="@drawable/password"
        android:drawablePadding="22dp"
        android:ems="10"
        android:hint="Повторите пароль *"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:backgroundTint="@color/black"
        android:textColorHint="#199B33"
        android:textSize="18sp"
        android:textCursorDrawable="@drawable/edittext_cursor_black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextPassword" />
    <CheckBox
        android:id="@+id/checkBoxPrivacyPolicy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Политика конфиденциальности"
        android:textColor="#199B33"
        android:textSize="14sp"
        android:buttonTint="#199B33"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextRepeatPassword" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/registrateBtn"
        style="@android:style/Widget.Button"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:background="@drawable/btn_detail_background"
        android:backgroundTint="#199B33"
        android:text="Зарегистрироваться"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBoxPrivacyPolicy" />

    <TextView
        android:id="@+id/requiredFieldNote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="* - обязательное поле"
        android:textColor="#199B33"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registrateBtn" />
</androidx.constraintlayout.widget.ConstraintLayout>