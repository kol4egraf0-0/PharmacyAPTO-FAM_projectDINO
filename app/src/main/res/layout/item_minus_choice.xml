<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_margin="50dp"
    android:background="@drawable/rounded_dialog_background_choice"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Удалить товар из корзины?"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_marginBottom="24dp" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_delete_item"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Удалить товар"
        style="@android:style/Widget.Button"
        android:backgroundTint="@drawable/selector_button_lightblueblack_tint"
        android:textColor="@color/black"
        android:background="@drawable/btn_detail_background"
        android:layout_marginBottom="12dp"
        android:paddingVertical="10dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_close"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        style="@android:style/Widget.Button"
        android:text="Закрыть"
        android:backgroundTint="@drawable/selector_button_lightblueblack_tint"
        android:textColor="@color/black"
        android:background="@drawable/btn_detail_background"
        android:layout_marginBottom="12dp"
        android:paddingVertical="10dp" />
</LinearLayout>
