<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp"
    android:layout_margin="8dp"
    android:background="@drawable/selector_item_background_profile">

    <ImageView
        android:id="@+id/iconProfileAccUsf"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/titleProfileAccUsf"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:text="Название кнопки"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/iconProfileAccUsf"
        app:layout_constraintEnd_toStartOf="@id/arrowProfile"
        app:layout_constraintStart_toEndOf="@id/iconProfileAccUsf"
        app:layout_constraintTop_toTopOf="@id/iconProfileAccUsf" />

    <ImageView
        android:id="@+id/arrowProfile"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:contentDescription="Arrow Icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:rotation="180"
        app:tint="@color/blue"
        android:src="@drawable/arrow_to_category_s_processed" />

</androidx.constraintlayout.widget.ConstraintLayout>
