<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@android:color/background_light">

    <!-- Текстовое содержимое (заголовок + текст) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/custom_notification_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Заказ создан!"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/custom_notification_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Номер заказа: 2847"
            android:textSize="14sp"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <!-- Картинка справа -->
    <ImageView
        android:id="@+id/custom_notification_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/imageaptodrawable"
        android:layout_marginStart="8dp"/>
</LinearLayout>
